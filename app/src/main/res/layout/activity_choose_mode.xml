<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.massih.myapplication.ChooseModeActivity"
    android:orientation="vertical"
    android:gravity="center">

        <TextView
            android:id="@+id/choose_mode_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_mode_txt"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/choose_mode_create_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_mode_create_server"
            android:onClick="chooseModeCreate"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/choose_mode_join_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_mode_join_server"
            android:onClick="chooseModeJoin"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>
